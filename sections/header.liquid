<header> 
  <div class="header__menu">
    {%  comment %} Hamburgers! {% endcomment %}
    <a class="fa-solid fa-bars" 
      href="#site__menu"
      role="button"
      data-bs-toggle="offcanvas" 
      data-bs-target="#site__menu" 
      aria-controls="site__menu"
    ></a>
    <a href = "/">
      <img 
      src = "{{ shop.brand.square_logo | image_url: width: 78}}" 
      width = 78, 
      height = 78
     >
    </a>
  </div>
  <div class="header__search">
    <form action="{{ routes.search_url }}">
      <i class="fa fa-magnifying-glass"></i>
      <input 
        type="search"
        placeholder="Search..."
        name="q"
        value="{{ search.terms | escape }}"
      >
    </form>
  </div>
  <div class="header__icons">
    {% if shop.customer_accounts_enabled %}
      {{ 'reader.svg' | inline_asset_content | link_to: routes.account_url }}
    {% endif %}
    <a href class="wkh-button">
      {{ 'bookshelf.svg' | inline_asset_content }}
    </a>
    <a href="{{ routes.cart_url }}">
      {% if cart.item_count > 0 %}
        <sup>{{ cart.item_count }}</sup>
      {% endif %}
      {{ 'basket.svg' | inline_asset_content }}
    </a>
  </div>
</header>
{% stylesheet %}
  header {
    height: 5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  header a {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
  }
  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
  }
  header svg {
    width: 2rem;
  }
  header .header__menu,
  header .header__icons {
    display: flex;
    gap: 1rem;
  }

  header .header__menu {
    align-items: center;
  }
  
  header .header__search {
    position: relative;
    display: flex;
    align-items: center;
  }
  
  header .header__search i {
    position: absolute;
    right: 10px;
    top: .45rem;
  }

  header .header__search input {
    padding-right: 30px;
    padding-left: .5em;
    border: 0;
    width: 33vw;
    font-size: 14pt;
  }

  header .header__search input:active,
  header .header__search input:focus {
    border: 0;
  }

    .wishlist-header-link .wkh-button {
    --icon-size: 22px;
    --icon-fill: transparent;
    --icon-stroke: #000000;
    --icon-stroke-width: 1px;
    --counter-size: 15px;

    display: flex;
    position: relative;
    padding: 16px 12px;
  }

  .wishlist-header-link .wkh-icon svg {
    display: block;
    width: var(--icon-size);
    height: var(--icon-size);
    overflow: visible;
    pointer-events: none;
  }
  
  .wishlist-header-link .wkh-icon svg path {
    fill: var(--icon-fill);
    stroke: var(--icon-stroke);
    stroke-width: var(--icon-stroke-width);
    vector-effect: non-scaling-stroke;
  }
  
  .wishlist-header-link .wkh-counter {
    opacity: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    min-width: var(--counter-size);
    height: var(--counter-size);
    border-radius: calc(var(--counter-size) / 2);
    font-size: 11px;
    line-height: 1;
    background: black;
    color: white;
    position:  absolute;
    top: 25px;
    right: 5px;
  }

  .wishlist-header-link .wkh-selected .wkh-counter {
    opacity: 1;
    transition: .2s opacity;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
