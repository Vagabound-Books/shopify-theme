<header>
  
  <div class="header__menu">
    {%  comment %} Hamburgers! {% endcomment %}
    <a class="fa-solid fa-bars" 
      href="#site__menu"
      role="button"
      data-bs-toggle="offcanvas" 
      data-bs-target="#site__menu" 
      aria-controls="site__menu"
    ></a>
    <img 
      src = "{{ shop.brand.square_logo | image_url: width: 78}}" 
      width = 78, 
      height = 78
    >
  </div>
  <div class="header__search">
    <form action="{{ routes.search_url }}">
      <input 
        type="search"
        placeholder="Search..."
        name="q"
        value="{{ search.terms | escape }}"
      >
      <input type="submit" value="Search">
    </form>
  </div>
  <div class="header__icons">
    {% if shop.customer_accounts_enabled %}
      {{ 'icon-account.svg' | inline_asset_content | link_to: routes.account_url }}
    {% endif %}

    <a href="{{ routes.cart_url }}">
      {% if cart.item_count > 0 %}
        <sup>{{ cart.item_count }}</sup>
      {% endif %}

      {{ 'icon-cart.svg' | inline_asset_content }}
    </a>
  </div>
</header>

{% stylesheet %}
  header {
    height: 5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  header a {
    position: relative;
    text-decoration: none;
    color: var(--color-foreground);
  }
  header a sup {
    position: absolute;
    left: 100%;
    overflow: hidden;
    max-width: var(--page-margin);
  }
  header svg {
    width: 2rem;
  }
  header .header__menu,
  header .header__icons {
    display: flex;
    gap: 1rem;
  }

  header .header__menu {
    align-items: center;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.header",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "t:labels.menu"
    }
  ]
}
{% endschema %}
